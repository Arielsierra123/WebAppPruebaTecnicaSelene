}

<h1>Eliminar</h1>

<h3>Estas seguro de eliminar esta venta?</h3>
<div>
    <h4>Sale</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cantity)
        </dd>
